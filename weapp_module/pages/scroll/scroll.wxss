.item-style {
    padding: 30rpx;
    font-size: 40rpx;
    border-top: 2rpx solid #eee;
    position: relative;
}
.item-style:after{
    position: absolute;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-top: 1px solid #333;
    border-right: 1px solid #333;
    right: 30rpx;
    top: 50rpx;
    transform: rotate(45deg);

}
.refresh-block {
    padding: 30rpx;
    text-align: center;
}
.refresh-block image {
    width: 60rpx;
    height: 60rpx;
}
